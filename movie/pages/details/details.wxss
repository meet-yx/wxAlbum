/* pages/details/details.wxss */
.details{
   color: #fff; 
   font-size: 12px;
   letter-spacing: 0.1em;
  position: relative;
}
.details>image{
  width: 100%;
  height: 400rpx;
}

.details .title{
  font-size: 16px;
  font-weight: bold;
  position: absolute;
  bottom: 80rpx;
  left: 20rpx
}
/*===============  */
.details .returnBox{
  position: fixed;
  background-color: rgba(0, 0, 0, 0.58);
  display: flex;
  height: 60rpx;
  flex-flow: row nowrap;
  width: 100%;
  top: 5rpx;
  justify-content: space-between;
  align-items: center;
  
}
.details .returnBox>view{
  background-color:#feff31;
  padding: 7rpx 20rpx;
  margin-left: 20rpx;
  border-radius: 14rpx;
}
.details .return{
  color: #333;
  
}
/*====================上传按钮=========  */
.btnUpload{
  position: fixed;
  background-color: #feff31;
  left: 48%;
  bottom: 80rpx;
  width: 100rpx;
  height: 100rpx;
  color: #333;
  text-align: center;
  border-radius: 50%;
  box-shadow:0px 0px  10px 1px #feff31;
  border: 5px solid #fff;
  
}
.btnUpload .uploadIcon{
  font-size: 30px;
}
.btnUpload .uploadText{
  font-size: 12px;
}
/*==========  */
.count{
  position: absolute;
  bottom: 20rpx;
  left: 20rpx
}
.count text{
  margin-right: 7rpx;
}

.imgList{
  margin: 20px 0;
}