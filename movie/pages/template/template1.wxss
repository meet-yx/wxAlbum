/*==========相册==========  */
.album{
   color: #fff; 
  position: relative;
}
.album image{
  width: 100%;
  height: 300rpx;
}
.collection{
  padding: 4rpx;
  border-radius: 50%;
  font-size: 40rpx !important;
  background-color:  rgba(0, 0, 0, 0.34);
  position: absolute;
  top: 20rpx;
  right: 20rpx
}
.album .title{
  font-size: 32rpx;
  position: absolute;
  bottom: 20rpx;
  left: 20rpx
}
.count{
  position: absolute;
  bottom: 20rpx;
  right: 20rpx
}
.count text{
  margin-left: 14rpx;
}

/*==========详情页图片====  */
.imgTime{
  font-size: 24rpx;
  margin: 0 20rpx;
}
.time{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between; 
  align-items:flex-end; 
}
.imglist{
  margin: 10rpx 0;
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start; 
}
.imglist>view{
  margin: 4rpx;
}
.imglist image{
  width: 228rpx;
  height: 228rpx;
}